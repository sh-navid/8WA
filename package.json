{
  "name": "nabotx",
  "displayName": "NaBotX",
  "description": "This VSCode extension helps developers code more efficiently with AI assistance. Currently, it serves as a simple alternative to Copilot or Cursor.",
  "publisher": "sh-navid", 
  "version": "0.0.1",
   "icon": "assets/logo.png",  
   "repository": {
    "type": "git",
    "url": "https://github.com/sh-navid/NaBotX"
  },
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "AI"
  ],
  "activationEvents": [],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "nabotx.openPanel",
        "title": "NaBotX: Open Panel"
      },   {
        "command": "nabotx.openSettings",
        "title": "NaBotX: Open Settings"
      }
    ],
    "menus": {
      "editor/title": [ 
        {
          "command": "nabotx.openSettings",
          "group": "navigation",  
          "when": "editorFocus"  
        }
      ]
    },
    "viewsContainers": {
      "sidebar": [
        {
          "id": "nabotxSidePanel",
          "title": "NaBotX",
          "icon": "assets/logo.png"
        }
      ],
      "activitybar": [
        {
          "id": "nabotxSidePanel",
          "title": "NaBotX",
          "icon": "assets/logo.png"
        }
      ]
    },
    "views": {
      "nabotxSidePanel": [
        {
          "type": "webview",
          "id": "nabotxSidePanelView",
          "name": "[NaBotX]"
        }
      ]
    },
    "configuration": {
      "title": "NaBotX Configuration",
      "properties": {
        "nabotx.path": {
          "type": "string",
          "default": "",
          "description": "The path to the LLM server."
        },
        "nabotx.token": {
          "type": "string",
          "default": "",
          "description": "The API token for LLM model."
        },
        "nabotx.model": {
          "type": "string",
          "default": "",
          "description": "The model to use for AI assistance."
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "eslint": "^9.25.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}